<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Renta.FeedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Renta.Controls"
    BackgroundColor="white"
    Shell.NavBarIsVisible="false">


    <StackLayout Margin="0,0">

        <controls:HeaderControl VerticalOptions="Start" />
        <!--
            TextToSearch="{Binding Text, Mode=OneWayToSource}"
            SearchCommand="{Binding SearchCommand}"
        -->

        <ScrollView Padding="8,0,0,0">
            <StackLayout Spacing="10">
                <Label
                    Margin="0,20,0,0"
                    FontSize="16"
                    Text="Recently Added:"
                    TextColor="Black" />
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                    </StackLayout>
                </ScrollView>


                <Label
                    Margin="0,20,0,0"
                    FontSize="16"
                    Text="Near You:"
                    TextColor="Black" />
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                    </StackLayout>
                </ScrollView>


                <Label
                    Margin="0,20,0,0"
                    FontSize="16"
                    Text="You Might Like:"
                    TextColor="Black" />
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                    </StackLayout>
                </ScrollView>

                <Label
                    Margin="0,20,0,0"
                    FontSize="16"
                    Text="Trending:"
                    TextColor="Black" />
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                        <controls:ItemCard />
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>