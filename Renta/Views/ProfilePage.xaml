<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Renta.ProfilePage"
             Title="ProfilePage"
             Shell.ForegroundColor="black"
             Shell.NavBarIsVisible="true"
             xmlns:controls="clr-namespace:Renta.Controls"
             BackgroundColor="White">

    
    
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Command="{Binding LogoutClicked }">
            
        </ToolbarItem>
    </ContentPage.ToolbarItems>

   

    <Grid RowDefinitions="90,20,50,15,15,auto,auto,auto" Padding="10,0" >

            <!-- Image Profile-->
            <Frame Grid.Row="1" Margin="0,-90,0,0" BorderColor="White" HorizontalOptions="Center" WidthRequest="110" HeightRequest="{OnPlatform iOS='110', Android='20'}" HasShadow="False" CornerRadius="55" Padding="0" IsClippedToBounds="True" >
                <Image Source="blankprofileimage" Aspect="AspectFill"/>
            </Frame>

            <!-- Profile name & general description-->
            <Label Grid.Row="2" Text="Angelica Melli" FontAttributes="Bold" TextColor="#383b67" HorizontalTextAlignment="Center" Margin="0,10,0,0" FontSize="22"/>

        <Grid Grid.Row="3" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,10,0,0" >
            <Image Grid.Column="0" Source="blankstar" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
            <Image Grid.Column="1" Source="blankstar" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
            <Image Grid.Column="2" Source="blankstar" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
            <Image Grid.Column="3" Source="blankstar" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
            <Image Grid.Column="4" Source="blankstar" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" />
            
        </Grid>
        
        <Grid Grid.Row="4" ColumnDefinitions="Auto,Auto" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,26,0,0">
            <Image Grid.Column="0" Source="locationicon" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" /> 
            <Label Grid.Column="1" Text="Tel aviv" FontAttributes="Bold" TextColor="#383b67"  FontSize="16"/>
        </Grid>

        <Label Grid.Row="5" Text="email" HorizontalTextAlignment="Start" Margin="0,30,0,0" FontSize="16"/>
        <Label Grid.Row="6" Text="number" HorizontalTextAlignment="Start" Margin="0,10,0,0" FontSize="16"/>
        <Label Grid.Row="7" Text="Renta credits" HorizontalTextAlignment="Start" Margin="0,10,0,0" FontSize="16"/>

    </Grid>
    


</ContentPage>