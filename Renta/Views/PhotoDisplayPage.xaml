<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:Renta.ViewModels"
             x:DataType="ViewModels:PhotoDisplayPageViewModel"
             x:Class="Renta.Views.PhotoDisplayPage"
               Shell.ForegroundColor="Black"
             Shell.NavBarIsVisible="true"
             Title=" ">
    <VerticalStackLayout>

        <Image x:Name="Img" Source="{Binding _imageSource}" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>