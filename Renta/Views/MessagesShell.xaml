<?xml version="1.0" encoding="utf-8" ?>

<Shell
    Shell.NavBarIsVisible="False"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarUnselectedColor="Black"
    Shell.TitleColor="Black"
    Shell.UnselectedColor="Gray"
    Title="Inbox"
    x:Class="Renta.MessagesShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:Pages="clr-namespace:Renta"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <TabBar>

        <Tab Title="Inbox">
            <ShellContent
                ContentTemplate="{DataTemplate Pages:NotificationsPage}"
                Route="NotificationsPage"
                Title="Notifications" />
            <ShellContent
                ContentTemplate="{DataTemplate Pages:MessagesPage}"
                Route="MessagesPage"
                Title="Messages" />
        </Tab>
    </TabBar>
</Shell>