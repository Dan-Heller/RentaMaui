<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Renta.Controls"
             x:Class="Renta.RentingPage"
             Title="RentingPage"
             BackgroundColor="White"
             Shell.ForegroundColor="black"
             Shell.NavBarIsVisible="true"
             Shell.TitleColor="Black">

  
    
    

    <StackLayout>

        <Grid>
            <Frame Grid.Row="0" Margin="0,5,0,5" Padding="0" BorderColor="Transparent" HasShadow="False">
                <controls:RentingPageTabsControl></controls:RentingPageTabsControl>
            </Frame>
        </Grid>
        <!-- line -->
        <BoxView 
                   HeightRequest="1"
                   Color="LightGray"
                   Margin ="0, 0, 0, 0"
        />

        <Label Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>