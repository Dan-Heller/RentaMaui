<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Renta.Controls.ReviewController"
             xmlns:Models="clr-namespace:Renta.Models"
             x:DataType="Models:UserReview" >

    <Frame
       Margin="2"
        Padding="0"
       
        BackgroundColor="AliceBlue"
        CornerRadius="13"
        BorderColor="DarkGray"
        HasShadow="True">

        <Grid RowDefinitions="auto,auto" ColumnDefinitions="*,15,auto"  Padding="0" HorizontalOptions="FillAndExpand" Margin="0,5,0,0" >
            <Label Grid.Row="0" Grid.Column="0" Text="Review: " FontSize="25" Margin="10,0,0,0" TextColor="Black"/>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Rating}"  FontSize="25" TextColor="Black"/>
            <Image Source="blankstar" Grid.Row="0" Grid.Column="2" Margin="0,0,7,0"/>
            <Label
                    Grid.Row="1"
                    FontSize="20"
                    Text="{Binding Review}"
                    TextColor="Black"
                    Margin="10,0,0,10"/>
        </Grid>
    </Frame>
</ContentView>
